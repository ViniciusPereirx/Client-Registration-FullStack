<%- include('layout/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-2">
      <div class="card shadow">
        <div
          class="card-header d-flex justify-content-between bg-body-secondary"
        >
          <h5 class="text-dark">Cadastrando Cliente</h5>
          <a href="/"
            ><input
              type="submit"
              id="submit"
              value="Cancelar"
              class="btn btn-danger btn-sm"
          /></a>
        </div>
        <div class="card-body p-4">
          <form
            action="/add"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name" class="mt-1">Nome</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-control form-control-md"
                placeholder="Informe seu nome"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email" class="mt-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control form-control-md"
                placeholder="Informe seu Email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="phone" class="mt-1">Telefone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-control form-control-md"
                placeholder="Informe o Telefone"
                required
              />
            </div>
            <div class="mb-3">
              <label for="city" class="mt-1">Cidade</label>
              <input
                type="text"
                id="city"
                name="city"
                class="form-control form-control-md"
                placeholder="Informe a Cidade"
                required
              />
            </div>
            <div class="mb-3">
              <label for="state" class="mt-1">Estado</label>
              <input
                type="text"
                id="state"
                name="state"
                class="form-control form-control-md"
                placeholder="Informe o Estado"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label mt-1">Foto</label>
              <input
                type="file"
                id="image"
                name="image"
                class="form-control form-control-sm"
                required
              />
            </div>
            <div class="mb-3">
              <input
                type="submit"
                id="submit"
                value="Registrar"
                class="btn btn-primary btn-sm"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer.ejs') %>
