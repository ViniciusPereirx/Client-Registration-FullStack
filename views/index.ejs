<%- include('layout/header.ejs') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <a href="/add"
        ><button type="button" class="btn btn-primary">
          Cadastrar Cliente
        </button></a
      >

      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %> mt-2"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>

      <div class="table-responsive mt-2">
        <% if (clients !='') { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-secondary text-center">
              <th>Foto</th>
              <th>Nome</th>
              <th>Email</th>
              <th>Telefone</th>
              <th>Cidade</th>
              <th>Estado</th>
              <th>Edit/Delete</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach((client) => { %>
            <tr class="align-middle">
              <td>
                <img
                  src="<%= client.image %>"
                  alt="image"
                  width="50"
                  class="img-thumbnail"
                />
              </td>
              <td><%= client.name %></td>
              <td><%= client.email %></td>
              <td><%= client.phone %></td>
              <td><%= client.city %></td>
              <td><%= client.state %></td>
              <td>
                <a href="/edit/<%= client._id %>" class="text-success"
                  ><i class="fas fa-edit fa-md mx-1"></i
                ></a>

                <a href="/delete/<%= client._id %>" class="text-danger"
                  ><i class="fas fa-trash fa-md mx-1"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">
          Nenhum usu√°rio encontrado!
        </h1>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('layout/footer.ejs') %>
</div>
